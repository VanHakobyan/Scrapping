<Window x:Class="Catawiki.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Catawiki.Desktop"
        mc:Ignorable="d"
        Title="Scrapping" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" ></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Grid.Column="0" Margin="20" HorizontalAlignment="Center" MinHeight="300" MinWidth="600">
            <TextBox Name="Link" Margin="10"/>
            <Button Content="Start"  HorizontalAlignment="Center"  VerticalAlignment="Top" Click="Button_Click"/>
            <Button Content="Export" HorizontalAlignment="Center"  VerticalAlignment="Top" Click="Export_Click"/>
            <DataGrid Name="Grid" MinHeight="275" MinWidth="550"  Margin="10" />
        </StackPanel>

    </Grid>
</Window>
